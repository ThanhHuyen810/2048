#include<iostream>
#include<windows.h>
#include<cstdlib>
using namespace std;
string MOVE() {
	string key;
	system("pause");
	if (GetAsyncKeyState(VK_UP)) key="UP";
	else if (GetAsyncKeyState(VK_DOWN)) key="DOWN";
	else if (GetAsyncKeyState(VK_RIGHT)) key="RIGHT";
	else if (GetAsyncKeyState(VK_LEFT)) key="LEFT";
	return key;
}
int main()
{	cout << "Luat choi: " << endl
		 << "	Nhan phim \"DOWN\" de di chuyen xuong duoi." << endl
		 << "	Nhan phim \"UP\" de di chuyen len tren." << endl
		 << "	Nhan phim \"LEFT\" de di chuyen sang trai." << endl
		 << "	Nhan phim \"RIGHT\" de di chuyen sang phai." << endl;
}
	
